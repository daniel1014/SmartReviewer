{
  "buildCommand": "npm ci && cd client && npm ci && npm run build",
  "outputDirectory": "client/dist",
  "installCommand": "npm ci",
  "functions": {
    "api/index.js": {
      "maxDuration": 30,
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    }
  ]
}